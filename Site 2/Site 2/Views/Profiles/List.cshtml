@model List<Site_2.Models.Profile>

<div class="card">
    <h2>Мои профили</h2>
    @if (Model.Any())
    {
        <ul>
            @foreach (var p in Model)
            {
                <li><a href="/profiles/view/@p.Id">@p.FirstName @p.LastName</a></li>
            }
        </ul>
    }
    else
    {
        <p>Профили не найдены.</p>
    }
</div>

